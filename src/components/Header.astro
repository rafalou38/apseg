<style lang="scss">
  .image-container {
    height: 200px;
    background: lightgray;
    display: flex;
    pointer-events: none;
    .flag {
      width: 50px;
      object-fit: cover;
      object-position: 0px;
    }
    .img-main {
      flex-grow: 1;
      height: 100%;
      object-fit: cover;
    }
  }

  nav {
    .nav-list {
      flex-wrap: wrap;
      gap: 2px;
      background: var(--bg);
      // border: 2px solid hsl(358, 75%, 58%);
      padding: 0;
      margin: 0;
      display: flex;
      list-style-type: none;
      > li {
        flex-grow: 1;
        .nav-element {
          margin: 0;
          color: var(--bg);
          display: flex;
          font-weight: 600;
          padding: 1em 2em;
          align-items: center;
          background: #457b9d;
          text-decoration: none;
          justify-content: center;
          text-transform: capitalize;
          transition: all 200ms ease;
          &:hover {
            color: var(--bg);
            background: #1d3557;
          }
          .more-icon {
            width: 2.5ch;
            margin-left: 0.5em;
          }
        }
      }

      .dropdown-wrapper {
        .nav-element {
          margin-bottom: 2px;
          z-index: 100;

          position: relative;
        }
        .dropdown-list {
          // overflow: hidden;
          // position: absolute;

          left: 0;
          // width: 100%;
          opacity: 0;

          list-style-type: none;
          padding: 0;

          transition: all 200ms ease;
        }
        .overflow-container {
          height: 0px;
        }
        li {
          transition: all 200ms ease;
        }

        &:hover {
          .dropdown-list {
            opacity: 1;
          }
        }
      }
    }
  }
</style>
